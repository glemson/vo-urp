<?xml version="1.0" encoding="UTF-8"?>
<!--<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">-->

<!--
  Log4J configuration file for IVOA UML Transformer
-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  <!-- Appenders : begin -->

  <!-- async -->
  <appender name="async" class="org.apache.log4j.AsyncAppender">
    <param name="BufferSize" value="1024"/>
    <param name="LocationInfo" value="false"/>
    <appender-ref ref="fileVO-URP-Browser" />
  </appender>
    
  <!-- vo-urp-browser.log -->
  <appender name="fileVO-URP-Browser" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${catalina.home}/logs/vo-urp-browser.log"/>
    <param name="MaxFileSize" value="10000KB"/>
    <param name="MaxBackupIndex" value="5"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %p [%t] - %m%n"/>
    </layout>
  </appender>
  <!-- Appenders : end -->

    
  <!-- Loggers : begin -->
  <logger name="org.ivoa">
    <level value="warn"/>
    <appender-ref ref="async" />
  </logger>

  <logger name="org.ivoa.base">
    <level value="warn"/>
  </logger>

  <logger name="org.ivoa.dev">
    <level value="warn"/>
  </logger>

  <logger name="org.eclipse.persistence">
    <level value="warn"/>
    <appender-ref ref="async" />
  </logger>
  <!-- Loggers : end -->
  
</log4j:configuration>
