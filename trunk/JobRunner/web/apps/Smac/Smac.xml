<name>Smac</name>
<description>Klaus' visualisation code.</description>
<parameter>
<name>SNAP_START</name>
<datatype>float</datatype>
<description>Start snapshot</description>
</parameter>
<parameter>
<name>SNAP_END</name>
<datatype>float</datatype>
<description>End snapshot</description>
</parameter>

<parameter>
<name>INITIAL_Z</name>
<datatype>float</datatype>
<description>Intial redshift</description>
</parameter>
<parameter>
<name>IMAGE_Z</name>
<datatype>float</datatype>
<description>image redshift (set IMAGE_Z=0. to obtain it from the input data)</description>
</parameter>
<parameter>
<name>PART_DISTR</name>
<datatype>float</datatype>
<description>
Flag of particle distribution scheme on the image:
         (0) NGC       -&gt;  not implemented
         (1) CIC       -&gt;  2D-map
         (2) HealPix   -&gt;  full-sky
         (3) TSC       -&gt;  2D-map
</description>
</parameter>
<parameter xsi:type="ts:EnumeratedParameter">
<name>IMG_XY_UNITS</name>
<datatype>string</datatype>
<description>Flag of the units of the side of image</description>
<validvalues>
<literal>
  <value>1</value>
  <title>arcmin</title>
</literal>
<literal>
  <value>2</value>
  <title>kpc</title>
  </literal>
</validvalues>
</parameter>

<parameter>
<name>IMG_XY_SIZE</name>
<datatype>float</datatype>
<description>The size of the image</description>
</parameter>



<parameter  xsi:type="ts:EnumeratedParameter">
<name>IMG_Z_UNITS</name>
<datatype>float</datatype>
<description></description>
<validvalues>
<literal>
  <value>1</value>
  <title>cubic</title>
  <description>same value of IMG_XY_UNITS</description>
</literal>
<literal>
  <value>2</value>
  <title>kpc</title>
</literal>
</validvalues>
</parameter>

<parameter>
<name>IMG_Z_SIZE</name>
<datatype>float</datatype>
<description>side of the third dimension</description>
</parameter>

<parameter>
<name>FILL_CARROT</name>
<datatype>float</datatype>
<description>minimum filling factor of the carrot [0&lt;-&gt;100] (its a percentile)</description>
</parameter>

<parameter>
<name>IMG_SIZE</name>
<datatype>integer</datatype>
<description>Number of image side pixels. if ==-1, given by smoothing</description>
</parameter>

<parameter xsi:type="ts:EnumeratedParameter">
<name>SMOOTH_UNITS</name>
<datatype>float</datatype>
<description>Flag of the smoothing (FWHM) angle</description>
<validvalues>
<literal>
  <value>0</value>
  <title>cubic</title>
</literal>
<literal>
  <value>1</value>
  <title>arcmin</title>
</literal>
<literal>
  <value>2</value>
  <title>kpc</title>
</literal>
<literal>
  <value>3</value>
  <title>given by npart</title>
</literal>
</validvalues>
</parameter>

<parameter>
<name>SMOOTH_FWHM</name>
<datatype>float</datatype>
<description>smoothing length in the chosen units (cases (1), (2))</description>
</parameter>

